<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AlertDialogCustom</item>
    </style>

    <style name="NoBarTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogCustom" parent="android:Theme.Material.Light.Dialog.Alert">
        <item name="android:colorPrimary">@color/colorPrimary</item>
        <item name="android:colorAccent">@color/colorPrimaryDark</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- Calendar theme. -->
    <style name="CaldroidCustomTheme" parent="CaldroidDefault">
        <item name="styleCaldroidViewLayout">@style/CaldroidCustomCalendarViewLayout</item>
        <item name="styleCaldroidMonthName">@style/CaldroidCustomMonthName</item>
        <item name="styleCaldroidGridView">@style/CaldroidCustomGridView</item>
        <item name="styleCaldroidSquareCell">@style/CaldroidCustomSquareCell</item>
    </style>

    <style name="CaldroidCustomCalendarViewLayout">
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

    <style name="CaldroidCustomMonthName" parent="CaldroidDefaultMonthName">
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="CaldroidCustomGridView" parent="CaldroidDefaultGridView">
        <item name="android:background">@color/colorSecondaryText</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="CaldroidCustomSquareCell" parent="CaldroidDefaultCell" >
        <item name="android:background">@color/colorPrimaryLight</item>
    </style>

</resources>
